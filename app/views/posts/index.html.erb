<h1>Listing posts</h1>
<%= link_to 'New post', new_post_path %> 
<table>
  <tr>
    <th align="left">Title</th>
    <th align="left">Text</th>
	<th></th>
    <th></th>
  </tr>
 
  <% @posts.each do |post| %>
    <tr>
      <td width="100"><%= post.title %></td>
      <td><%= post.text %></td>
	  <td><%= link_to 'Show', post_path(post) %></td>
      <td><%= link_to 'Edit', edit_post_path(post) %></td>
    </tr>
  <% end %>
</table>